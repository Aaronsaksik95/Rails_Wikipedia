<h1>Editing User</h1>

<%= form_for @user do |form| %>
  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email, :class => "form-control w-25" %>
  </div>

  <div class="field">
    <%= form.label :password %>
    <%= form.password_field :password, :class => "form-control w-25" %>
  </div>

  <div class="field">
    <%= form.label :password_confirmation %>
    <%= form.password_field :password_confirmation, :class => "form-control w-25" %>
  </div>

  <div class="actions">
    <%= form.submit :class => "btn btn-info"%>
  </div>
<% end %>
  

<%= link_to 'Voir', @user %> |
<%= link_to 'Retour', users_path %>