<p id="notice"><%= notice %></p>

<h1>Classement</h1>

<table class="table w-50 mx-auto">
  <thead>
    <tr>
      <th>Placement</th>
      <th>Username</th>
      <th>Points</th>
      <th>Créé le</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= @users.index(user)+1 %></td>
        <td><%= user.username %></td>
        <td><%= user.point %></td>
        <td><%= user.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>

