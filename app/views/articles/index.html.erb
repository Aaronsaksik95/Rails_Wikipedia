<p id="notice"><%= notice %></p>

<h1>Articles</h1>

<div class="flex-wrap d-flex justify-content-around m-5">
  <% @articles.each do |article| %>
    <div class="card m-2" style="width: 18rem;">
      <div class="card-body">
        <h5 class="card-title"><%= article.title %></h5>
        <p class="card-subtitle mb-2 text-muted"><%= article.updated_at %></p>
        <p class="card-text"><%= article.content %></p>
        <p> <%= link_to 'Voir plus', article %></p>
        <% if @current_user && @current_user.id == article.user.id %>
          <p><%= link_to 'Supprimer', article, method: :delete, data: { confirm: 'Are you sure?' } %></p>
          <p><%= link_to 'Modifié', edit_article_path(article) %></p>
          <p><%= link_to 'Historique', historical_article_path(article) %></p>
        <% elsif @current_user %>
          <p><%= link_to 'Modifié', edit_article_path(article) %></p>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
