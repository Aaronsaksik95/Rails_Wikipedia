<p id="notice"><%= notice %></p>

<h1>Articles</h1>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Title</th>
      <th>Content</th>
      <th>User_id</th>
      <th>User_Tag</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
        <tr>
          <td><%= article.id %></td>
          <td><%= article.title %></td>
          <td><%= article.content %></td>
          <td><%= article.user.id %></td>
          <td>
            <div class="">
              <% for usertag in article.usertags %>
                <%= usertag.user.username %>
              <% end %>
            </div>
          </td>
          <td><%= link_to 'Show', article %></td>
          <% if @current_user && @current_user.id == article.user.id %>
            <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <td><%= link_to 'Edit', edit_article_path(article) %>
            <td><%= link_to 'Historical', historical_article_path(article) %>
          <% elsif @current_user %>
            <td><%= link_to 'Edit', edit_article_path(article) %>
          <% end %>
        </tr>
      
    <% end %>
  </tbody>
</table>

