<main>
<h1 class="border-bottom border-info mt-4">Connexion</h1>
  <%= notice %>
  <%= form_for :login do |f| %>
    <div>
      <%= f.label :email %>
      <%= f.text_field :email, :class => "form-control w-25" %>
    </div>
    <div>
      <%= f.label :password %>
      <%= f.password_field :password, :class => "form-control w-25" %>
    </div>
    <%= f.submit :class => "btn btn-info mt-3"%>
  <% end %>
</main>
